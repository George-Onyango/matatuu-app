<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#061EF3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/tvCurrentBooking"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Booking"
        android:textSize="24dp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:layout_height="wrap_content"
            android:text="Home"
            tools:layout_editor_absoluteX="318dp"
            tools:layout_editor_absoluteY="667dp" />

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_post_add_24"
            android:layout_weight="1"
            android:text="Add"
            tools:layout_editor_absoluteX="318dp"
            tools:layout_editor_absoluteY="667dp" />

        <Button
            android:id="@+id/btnOrderHistory"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="History"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_history_24"
            tools:layout_editor_absoluteX="318dp"
            tools:layout_editor_absoluteY="667dp" />
        <Button
            android:id="@+id/btnProfile"
            android:layout_width="130dp"
            android:drawableTop="@drawable/ic_baseline_person_24"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile"
            tools:layout_editor_absoluteX="318dp"
            tools:layout_editor_absoluteY="667dp" />

    </LinearLayout>




</LinearLayout>